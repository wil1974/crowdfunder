<% if can? :manage, reward %>

<div class="text-right">
  <%= link_to "Edit", edit_project_reward_path(@project, reward)  %>
  <%= link_to "Delete", project_reward_path(@project, reward), method: :delete, data: {confirm: "Delete Reward?"}  %>
</div>

<%= link_to '#', class: "reward" do %>
<div class="reward-box">
  <p class="pledge">Pledge $ <%= reward.value %> or more</p>
  <p class="backers"><span class="primary-color">
    <i class="fa fa-cog"></i>
  </span></p>
  20 backers

  <p class="description"><%= reward.description %></p>
  <div class="time">
    <span class="grey">Estimated delivery:</span>
    <br><%= reward.estimated_delivery %>
    <div class="reward-hover">Select this reward.</div>
  </div>
</div>

<% end %>

<% end %>
